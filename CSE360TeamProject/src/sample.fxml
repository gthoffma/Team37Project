<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.geometry.Insets?>
<GridPane fx:controller="Controller"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center"
          hgap="8"
          vgap="10"
          minHeight="700"
          minWidth="900"
          gridLinesVisible="false">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <Text fx:id="text1"
          text="File Path: "
          GridPane.columnIndex="0"
          GridPane.rowIndex="2"
          GridPane.columnSpan="2"
          GridPane.rowSpan="1"
          GridPane.halignment="CENTER"
    />
    <TextField fx:id="filePath"
          text="/directory/file.csv "
          GridPane.columnIndex="0"
          GridPane.rowIndex="3"
          GridPane.columnSpan="2"
          GridPane.rowSpan="1"
          GridPane.halignment="LEFT"
    />
    <Button fx:id="button1"
            text="Load File"
            GridPane.columnIndex="0"
            GridPane.rowIndex="4"
            GridPane.columnSpan="2"
            GridPane.rowSpan="1"
            GridPane.halignment="LEFT"
    />
    <Label fx:id="boundaryLow"
    		text="lowest value:"
    		GridPane.columnIndex="0"
    		GridPane.rowIndex="5"
    		GridPane.columnSpan="1"
    		GridPane.rowSpan="1"
    		GridPane.halignment="LEFT"
  	/>
  	<TextField fx:id="inputBoundLow"
    		text=""
    		GridPane.columnIndex="1"
    		GridPane.rowIndex="5"
    		GridPane.columnSpan="1"
    		GridPane.rowSpan="1"
    		GridPane.halignment="LEFT"
  	/>
  	<Label fx:id="boundaryHigh"
    		text="highest value:"
    		GridPane.columnIndex="0"
    		GridPane.rowIndex="6"
    		GridPane.columnSpan="1"
    		GridPane.rowSpan="1"
    		GridPane.halignment="LEFT"
  	/>
  	<TextField fx:id="inputBoundHigh"
    		text=""
    		GridPane.columnIndex="1"
    		GridPane.rowIndex="6"
    		GridPane.columnSpan="1"
    		GridPane.rowSpan="1"
    		GridPane.halignment="LEFT"
  	/>
  	<Button fx:id="button6"
  			text="Set Bounds"
  			GridPane.columnIndex="0"
            GridPane.rowIndex="7"
            GridPane.columnSpan="2"
            GridPane.rowSpan="1"
            GridPane.halignment="LEFT"
    />
  	<Label fx:id="manualInputLabel"
  			text="Manual Input Value: "
  			GridPane.columnIndex="0"
            GridPane.rowIndex="8"
            GridPane.columnSpan="1"
            GridPane.rowSpan="1"
            GridPane.halignment="LEFT"
    />
   	<TextField fx:id="manualInput"
  			text=""
  			GridPane.columnIndex="1"
            GridPane.rowIndex="8"
            GridPane.columnSpan="1"
            GridPane.rowSpan="1"
            GridPane.halignment="LEFT"
    />   
    <Button fx:id="button2"
            text="Manual Entry"
            GridPane.columnIndex="0"
            GridPane.rowIndex="9"
            GridPane.columnSpan="2"
            GridPane.rowSpan="1"
            GridPane.halignment="LEFT"
    />
    <Button fx:id="button3"
            text="Append Data"
            GridPane.columnIndex="0"
            GridPane.rowIndex="10"
            GridPane.columnSpan="2"
            GridPane.rowSpan="1"
            GridPane.halignment="LEFT"
    />
    <Button fx:id="button5"
    		text="Create Report"
    		GridPane.columnIndex="0"
            GridPane.rowIndex="11"
            GridPane.columnSpan="2"
            GridPane.rowSpan="1"
            GridPane.halignment="LEFT"
     />
    <Button fx:id="button4"
            text="Delete Data"
            GridPane.columnIndex="0"
            GridPane.rowIndex="12"
            GridPane.columnSpan="2"
            GridPane.rowSpan="1"
            GridPane.halignment="LEFT"
    />
    <Label fx:id="title"
           text="Grade Analytics"
           GridPane.columnIndex="3"
           GridPane.rowIndex="1"
           GridPane.columnSpan="1"
           GridPane.rowSpan="1"
           GridPane.halignment="CENTER"
    />
    <TextArea fx:id="display"
              text="Error: 3 values were outside of specified range:&#10;&#9;at row: 2 column: 9 value is 101&#10;&#9;at row: 10 column: 3 value is -5&#10;&#9;at row: 25 column: 1 value is -20"
              GridPane.columnIndex="3"
              GridPane.rowIndex="16"
              GridPane.columnSpan="1"
              GridPane.rowSpan="4"
              GridPane.valignment="BOTTOM"
    />
    <Label fx:id="numEntriesLabel"
           text="Entries:"
           GridPane.columnIndex="0"
           GridPane.rowIndex="13"
           GridPane.columnSpan="1"
           GridPane.rowSpan="1"
    />
    <Label fx:id="meanLabel"
           text="Mean:"
           GridPane.columnIndex="0"
           GridPane.rowIndex="14"
           GridPane.columnSpan="1"
           GridPane.rowSpan="1"
    />
    <Label fx:id="medianLabel"
           text="Median:"
           GridPane.columnIndex="0"
           GridPane.rowIndex="15"
           GridPane.columnSpan="1"
           GridPane.rowSpan="1"
    />
    <Label fx:id="modeLabel"
           text="Mode:"
           GridPane.columnIndex="0"
           GridPane.rowIndex="16"
           GridPane.columnSpan="1"
           GridPane.rowSpan="1"
    />
    <Label fx:id="highLabel"
           text="High: "
           GridPane.columnIndex="0"
           GridPane.rowIndex="17"
           GridPane.columnSpan="1"
           GridPane.rowSpan="1"
    />
    <Label fx:id="lowLabel"
           text="Low: "
           GridPane.columnIndex="0"
           GridPane.rowIndex="18"
           GridPane.columnSpan="1"
           GridPane.rowSpan="1"
    />
    <Text fx:id="numEntries"
          text="50"
          GridPane.columnIndex="1"
          GridPane.rowIndex="13"
          GridPane.columnSpan="1"
          GridPane.rowSpan="1"
          GridPane.halignment="LEFT"
    />
    <Text fx:id="mean"
          text="74.5"
          GridPane.columnIndex="1"
          GridPane.rowIndex="14"
          GridPane.columnSpan="1"
          GridPane.rowSpan="1"
          GridPane.halignment="LEFT"
    />
    <Text fx:id="median"
          text="77"
          GridPane.columnIndex="1"
          GridPane.rowIndex="15"
          GridPane.columnSpan="1"
          GridPane.rowSpan="1"
          GridPane.halignment="LEFT"
    />
    <Text fx:id="mode"
          text="76"
          GridPane.columnIndex="1"
          GridPane.rowIndex="16"
          GridPane.columnSpan="1"
          GridPane.rowSpan="1"
          GridPane.halignment="LEFT"
    />
    <Text fx:id="high"
          text="95"
          GridPane.columnIndex="1"
          GridPane.rowIndex="17"
          GridPane.columnSpan="1"
          GridPane.rowSpan="1"
          GridPane.halignment="LEFT"
    />
    <Text fx:id="low"
          text="0"
          GridPane.columnIndex="1"
          GridPane.rowIndex="18"
          GridPane.columnSpan="1"
          GridPane.rowSpan="1"
          GridPane.valignment="TOP"
    />
    
    <BarChart fx:id="barChart"
              legendVisible="false"
              GridPane.columnIndex="3"
              GridPane.rowIndex="0"
              GridPane.columnSpan="1"
              GridPane.rowSpan="20">
        <xAxis>
            <NumberAxis id="xAxis"
                        tickLabelRotation="90"
                        label="Frequency"/>
        </xAxis>
        <yAxis>
            <CategoryAxis id="yAxis"
                          label="Grade Distribution"/>
        </yAxis>
    </BarChart>
</GridPane>